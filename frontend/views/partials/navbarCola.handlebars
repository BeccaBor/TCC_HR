<script>
  document.addEventListener('DOMContentLoaded', () => {
    const openLogoutModalBtn = document.getElementById('openLogoutModal');
    const logoutBtn = document.getElementById('logoutBtn');
    const logoutModalEl = document.getElementById('logoutModal');
    const logoutModal = new bootstrap.Modal(logoutModalEl);

    // Abre o modal ao clicar no link "Sair"
    openLogoutModalBtn.addEventListener('click', (e) => {
      e.preventDefault(); // evita navegação
      logoutModal.show();
    });

    // Ao confirmar logout
   document.getElementById('logoutBtn').addEventListener('click', async () => {
  try {
    await fetch('http://localhost:3001/logout', { method: 'POST' });
  } catch (err) {
    console.error('Erro no logout:', err);
  } finally {
    localStorage.removeItem('token');
    sessionStorage.removeItem('token');
    window.location.href = '/';
  }
});
  });
</script>
