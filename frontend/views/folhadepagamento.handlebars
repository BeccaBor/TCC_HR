<link rel="stylesheet" href="../css/folhapaga.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="page-wrapper">
  {{> navbar }}
  
  <div class="cola-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div>
       <h3>Setores</h3>
<ul id="setores-list">
  <!-- setores serão inseridos aqui via JS -->
  <li><a href="#" data-setor="Todos" class="sidebar-link sidebar-link-active"><i class="bi bi-calculator"></i> Todos</a></li>
</ul>


        <h3 style="margin-top: 2rem;">Gestão</h3>
        <ul>
          <li><a href="#calendario" class="sidebar-link sidebar-link-default"><i class="bi bi-graph-up"></i> Relatorios</a></li>
          <li><a href="#beneficios" class="sidebar-link sidebar-link-default"><i class="bi bi-credit-card"></i> Benefícios</a></li>
          <li><a href="#analytics" class="sidebar-link sidebar-link-default"><i class="bi bi-card-text"></i> Holherite</a></li>
        </ul>
      </div>
    </aside>

    <!-- Conteúdo Principal -->
    <main class="p-4">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
          <h1 class="text-white mb-2" style="font-size: 1.875rem; font-weight: 700;">Folha de Pagamento</h1>
          <p style="color: rgba(255,255,255,0.7);">Gerencie salários, benefícios e relatórios da sua equipe</p>
        </div>
        <div class="d-flex gap-3">
          <button class="glass-button"><i class="bi bi-download"></i> Exportar</button>
          <button class="glass-button-primary" id="btn-novo-func"><i class="bi bi-plus-lg"></i> Novo Funcionário</button>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="stat-icon gradient-blue-cyan"><i class="bi bi-people text-white"></i></div>
              <span class="text-success" style="font-size: 0.875rem; font-weight: 500;">+12%</span>
            </div>
            <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; margin-bottom: 0.25rem;">Total Funcionários</p>
            <h3 class="text-white" id="stat-total-func" style="font-size: 1.5rem; font-weight: 700;">248</h3>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="stat-icon gradient-green-emerald"><i class="bi bi-currency-dollar text-white"></i></div>
              <span class="text-success" style="font-size: 0.875rem; font-weight: 500;">+8.2%</span>
            </div>
            <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; margin-bottom: 0.25rem;">Folha Mensal</p>
            <h3 class="text-white" id="stat-folha-mensal" style="font-size: 1.5rem; font-weight: 700;">R$ 284.500</h3>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="stat-icon gradient-purple-pink"><i class="bi bi-graph-up text-white"></i></div>
              <span class="text-success" style="font-size: 0.875rem; font-weight: 500;">+3.1%</span>
            </div>
            <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; margin-bottom: 0.25rem;">Média Salarial</p>
            <h3 class="text-white" id="stat-media-salarial" style="font-size: 1.5rem; font-weight: 700;">R$ 4.850</h3>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="stat-icon gradient-orange-red"><i class="bi bi-calendar text-white"></i></div>
              <span style="color: rgba(255,255,255,0.7); font-size: 0.875rem; font-weight: 500;">Em breve</span>
            </div>
            <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; margin-bottom: 0.25rem;">Próximo Pagamento</p>
            <h3 class="text-white" id="stat-proximo-pagamento" style="font-size: 1.5rem; font-weight: 700;">5 dias</h3>
          </div>
        </div>
      </div>

      <!-- Tabela de Funcionários -->
      <div class="glass-card">
        <div class="d-flex justify-content-between align-items-center mb-4 pb-3" style="border-bottom: 1px solid rgba(255,255,255,0.1);">
          <h2 class="text-white" style="font-size: 1.25rem; font-weight: 700;">Funcionários</h2>
          <div class="d-flex gap-3">
            <div class="position-relative">
              <i class="bi bi-search position-absolute" style="left: 0.75rem; top: 50%; transform: translateY(-50%); color: rgba(255,255,255,0.5);"></i>
              <input type="text" class="glass-input" id="input-busca" placeholder="Buscar funcionários..." style="padding-left: 2.5rem; width: 250px;">
            </div>
            <button class="glass-button" style="padding: 0.5rem;"><i class="bi bi-funnel"></i></button>
          </div>
        </div>

        <div class="table-responsive">
          <table class="glass-table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Salário</th>
                <th>Status</th>
                <th>Ações</th>
              </tr>
            </thead>
           <tbody id="employees-tbody">
  <!-- linhas serão inseridas por JS -->
</tbody>

          </table>
        </div>
      </div>
    </main>
  </div>
</div>

<script src="/public/js/folhaGestor.js"></script>
